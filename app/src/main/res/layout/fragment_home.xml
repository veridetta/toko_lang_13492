<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/ly_loading"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_16sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_sort"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/grey">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:background="@drawable/ic_action_sort_al"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_pria"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/grey">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pria"
                                        android:textColor="@color/purple_700"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_wanita"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/grey">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Wanita"
                                        android:textColor="@color/purple_700"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_anak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/grey">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Anak"
                                        android:textColor="@color/purple_700"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rc_produk"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</FrameLayout>